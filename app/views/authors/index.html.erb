<h1>Listing Authors</h1>

<table>
    <tr>
        <th>Name</th>
        <th>Homepage</th>
    </tr>

    <%= link_to 'New Author', new_author_path %>
    <% @authors.each do |author| %>
        <tr>
            <td><%= author.name %></td>
            <td><a href="<%= author.homepage %>"><%= author.homepage %></a></td>
            <td><%= link_to 'Show', author_path(author) %></td>
        </tr>
    <% end %>

</table>